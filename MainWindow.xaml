<Window x:Class="Shadeworks.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ShadeWorks" Height="800" Width="1400"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResize"
        Icon="Assets/logo-white.png"
        AllowDrop="True"
        Drop="Window_Drop"
        DragEnter="Window_DragEnter"
        DragLeave="Window_DragLeave">
    
    <Border Background="#1E1E1E" CornerRadius="8" BorderBrush="#2D2D30" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="32"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="24"/>
            </Grid.RowDefinitions>

            <!-- Combined Title Bar and Menu -->
            <Border Grid.Row="0" Background="#252526" CornerRadius="8,8,0,0" BorderBrush="#3E3E42" BorderThickness="0,0,0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Draggable area behind everything -->
                    <Border Grid.Column="0" Grid.ColumnSpan="3" Background="Transparent" 
                            MouseLeftButtonDown="TitleBar_MouseLeftButtonDown"/>

                    <!-- Logo and Menu Bar -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <!-- Logo -->
                        <Image Source="Assets/logo-white.png" 
                               Height="20" 
                               Margin="8,0,8,0" 
                               VerticalAlignment="Center"
                               RenderOptions.BitmapScalingMode="HighQuality"/>
                        
                        <!-- Menu Bar -->
                        <Menu Background="Transparent" VerticalAlignment="Center">
                            <MenuItem Header="File" Style="{StaticResource ModernMenuItem}">
                                <MenuItem Header="Open..." Click="OpenImage_Click"/>
                                <MenuItem Header="Export..." Click="ExportImage_Click"/>
                                <Separator/>
                                <MenuItem Header="Exit" Click="CloseButton_Click"/>
                            </MenuItem>
                            <MenuItem Header="Edit" Style="{StaticResource ModernMenuItem}">
                                <MenuItem Header="Reset All" Click="ResetAll_Click"/>
                            </MenuItem>
                            <MenuItem Header="Batch" Style="{StaticResource ModernMenuItem}"/>
                            <MenuItem Header="Adjustments" Style="{StaticResource ModernMenuItem}"/>
                            <MenuItem Header="Themes" Style="{StaticResource ModernMenuItem}"/>
                            <MenuItem Header="Extras" Style="{StaticResource ModernMenuItem}"/>
                            <MenuItem Header="Help" Style="{StaticResource ModernMenuItem}"/>
                        </Menu>
                    </StackPanel>

                    <!-- Window Controls -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Stretch">
                        <Button Click="MinimizeButton_Click" Style="{StaticResource WindowButton}" Width="46" Height="32">
                            <TextBlock Text="&#xE921;" FontFamily="Segoe MDL2 Assets" FontSize="10" Foreground="#CCCCCC" VerticalAlignment="Center"/>
                        </Button>
                        <Button Click="MaximizeButton_Click" Style="{StaticResource WindowButton}" Width="46" Height="32">
                            <TextBlock Text="&#xE922;" FontFamily="Segoe MDL2 Assets" FontSize="10" Foreground="#CCCCCC" VerticalAlignment="Center"/>
                        </Button>
                        <Button Click="CloseButton_Click" Style="{StaticResource WindowButtonClose}" Width="46" Height="32">
                            <TextBlock Text="&#xE8BB;" FontFamily="Segoe MDL2 Assets" FontSize="10" Foreground="#CCCCCC" VerticalAlignment="Center"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="380"/>
                </Grid.ColumnDefinitions>

                <!-- Left Canvas Area -->
                <Border Grid.Column="0" Background="#252526" Margin="0,0,0,0"
                        AllowDrop="True"
                        Drop="Canvas_Drop"
                        DragEnter="Canvas_DragEnter"
                        DragLeave="Canvas_DragLeave">
                    <Grid>
                        <!-- Drag & Drop Placeholder -->
                        <Grid x:Name="DropPlaceholder" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Rectangle Stroke="#555555" 
                                       StrokeThickness="2" 
                                       StrokeDashArray="6 4"
                                       RadiusX="8" 
                                       RadiusY="8"
                                       Width="400"
                                       Height="280"
                                       Fill="Transparent"/>
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="🖼️" FontSize="64" HorizontalAlignment="Center" Margin="0,0,0,16"/>
                                <TextBlock Text="Drop image here or click to browse" 
                                           FontSize="18" Foreground="#999999" HorizontalAlignment="Center" FontWeight="Normal"/>
                                <TextBlock Text="Supported: PNG, JPG, BMP, GIF" 
                                           FontSize="14" Foreground="#666666" HorizontalAlignment="Center" Margin="0,12,0,0"/>
                            </StackPanel>
                        </Grid>
                        
                        <!-- Image Display -->
                        <ScrollViewer x:Name="ImageScrollViewer" 
                                      HorizontalScrollBarVisibility="Auto" 
                                      VerticalScrollBarVisibility="Auto"
                                      PreviewMouseWheel="ImageScrollViewer_MouseWheel"
                                      PreviewMouseDown="ImageScrollViewer_MouseDown"
                                      PreviewMouseMove="ImageScrollViewer_MouseMove"
                                      PreviewMouseUp="ImageScrollViewer_MouseUp"
                                      CanContentScroll="True"
                                      Visibility="Collapsed">
                            <Border x:Name="ImageBorder" Background="Transparent" Margin="20">
                                <Image x:Name="ImagePreview" 
                                       RenderTransformOrigin="0.5,0.5"
                                       Stretch="Uniform">
                                    <Image.RenderTransform>
                                        <ScaleTransform x:Name="ImageScaleTransform" ScaleX="1" ScaleY="1"/>
                                    </Image.RenderTransform>
                                </Image>
                            </Border>
                        </ScrollViewer>
                    </Grid>
                </Border>

                <!-- Right Sidebar -->
                <Border Grid.Column="1" Background="#2D2D30" BorderBrush="#3E3E42" BorderThickness="1,0,0,0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0" Margin="0">
                        <StackPanel Margin="16,16,10,16">
                            <!-- ACTIONS Section -->
                            <TextBlock Text="Actions" FontSize="16" Foreground="#E0E0E0" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Button Grid.Column="0" Content="Import" Click="OpenImage_Click" 
                                        Style="{StaticResource ModernButton}" Margin="0,0,4,0" Padding="0,10" FontSize="14"/>
                                <Button Grid.Column="1" Content="Export" Click="ExportImage_Click" 
                                        Style="{StaticResource ModernButton}" Margin="4,0,0,0" Padding="0,10" FontSize="14"/>
                            </Grid>

                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Button Grid.Column="0" Content="Zoom In" Click="ZoomIn_Click" 
                                        Style="{StaticResource ModernButton}" Margin="0,0,2,0" Padding="0,10" FontSize="13"/>
                                <Button Grid.Column="1" Content="Zoom Out" Click="ZoomOut_Click" 
                                        Style="{StaticResource ModernButton}" Margin="2,0,2,0" Padding="0,10" FontSize="13"/>
                                <Button Grid.Column="2" Content="Reset" Click="ResetZoom_Click" 
                                        Style="{StaticResource ModernButton}" Margin="2,0,0,0" Padding="0,10" FontSize="13"/>
                            </Grid>

                            <Separator Margin="0,0,0,12" Background="#3E3E42"/>

                            <!-- ALGORITHM Section -->
                            <TextBlock Text="Algorithm" FontSize="16" Foreground="#E0E0E0" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            
                            <TextBlock Text="Style" FontSize="13" Foreground="#999999" Margin="0,0,0,4"/>
                            <ComboBox x:Name="StyleComboBox" SelectionChanged="Style_Changed" 
                                      Style="{StaticResource ModernComboBox}" Margin="0,0,0,8">
                                <ComboBoxItem Content="Uniform Modulation Y" IsSelected="True"/>
                                <ComboBoxItem Content="Floyd-Steinberg"/>
                                <ComboBoxItem Content="Atkinson"/>
                                <ComboBoxItem Content="Ordered Bayer"/>
                            </ComboBox>

                            <TextBlock Text="Presets" FontSize="13" Foreground="#999999" Margin="0,0,0,4"/>
                            <ComboBox x:Name="PresetsComboBox" SelectionChanged="Presets_Changed" 
                                      Style="{StaticResource ModernComboBox}" Margin="0,0,0,12">
                                <ComboBoxItem Content="None" IsSelected="True"/>
                                <ComboBoxItem Content="Retro Print"/>
                                <ComboBoxItem Content="High Contrast"/>
                                <ComboBoxItem Content="Soft Grain"/>
                            </ComboBox>

                            <Separator Margin="0,0,0,12" Background="#3E3E42"/>

                            <!-- PARAMETERS Section -->
                            <TextBlock Text="Parameters" FontSize="16" Foreground="#E0E0E0" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            
                            <Grid Margin="0,0,0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Scale" FontSize="13" Foreground="#999999"/>
                                <TextBlock Grid.Column="1" Text="{Binding ElementName=ScaleSlider, Path=Value, StringFormat={}{0:F0}}" 
                                           FontSize="13" Foreground="#999999"/>
                            </Grid>
                            <Slider x:Name="ScaleSlider" Minimum="1" Maximum="20" Value="11" 
                                    Style="{StaticResource ModernSlider}" Margin="0,0,0,8"/>

                            <Grid Margin="0,0,0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Line Scale" FontSize="13" Foreground="#999999"/>
                                <TextBlock Grid.Column="1" Text="{Binding ElementName=LineScaleSlider, Path=Value, StringFormat={}{0:F0}}" 
                                           FontSize="13" Foreground="#999999"/>
                            </Grid>
                            <Slider x:Name="LineScaleSlider" Minimum="0" Maximum="10" Value="1" 
                                    Style="{StaticResource ModernSlider}" Margin="0,0,0,8"/>

                            <Grid Margin="0,0,0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Smoothing Factor" FontSize="13" Foreground="#999999"/>
                                <TextBlock Grid.Column="1" Text="{Binding ElementName=SmoothingSlider, Path=Value, StringFormat={}{0:F0}}" 
                                           FontSize="13" Foreground="#999999"/>
                            </Grid>
                            <Slider x:Name="SmoothingSlider" Minimum="0" Maximum="10" Value="0" 
                                    Style="{StaticResource ModernSlider}" Margin="0,0,0,8"/>

                            <Grid Margin="0,0,0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Bleed Fraction" FontSize="13" Foreground="#999999"/>
                                <TextBlock Grid.Column="1" Text="{Binding ElementName=BleedSlider, Path=Value, StringFormat={}{0:F0}}" 
                                           FontSize="13" Foreground="#999999"/>
                            </Grid>
                            <Slider x:Name="BleedSlider" Minimum="0" Maximum="100" Value="0" 
                                    Style="{StaticResource ModernSlider}" Margin="0,0,0,12"/>

                            <Separator Margin="0,0,0,12" Background="#3E3E42"/>

                            <!-- COLOR Section -->
                            <TextBlock Text="Color" FontSize="16" Foreground="#E0E0E0" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            
                            <TextBlock Text="Palette Category" FontSize="13" Foreground="#999999" Margin="0,0,0,4"/>
                            <ComboBox x:Name="PaletteCategoryComboBox" SelectionChanged="PaletteCategory_Changed" 
                                      Style="{StaticResource ModernComboBox}" Margin="0,0,0,8">
                                <ComboBoxItem Content="Retro" IsSelected="True"/>
                                <ComboBoxItem Content="Monochrome"/>
                                <ComboBoxItem Content="RGB"/>
                                <ComboBoxItem Content="CMYK"/>
                            </ComboBox>

                            <TextBlock Text="Palette" FontSize="13" Foreground="#999999" Margin="0,0,0,4"/>
                            <ComboBox x:Name="PaletteComboBox" SelectionChanged="Palette_Changed" 
                                      Style="{StaticResource ModernComboBox}" Margin="0,0,0,12">
                                <ComboBoxItem Content="Default" IsSelected="True"/>
                                <ComboBoxItem Content="Vintage"/>
                                <ComboBoxItem Content="Warm"/>
                                <ComboBoxItem Content="Cool"/>
                            </ComboBox>

                            <Separator Margin="0,0,0,12" Background="#3E3E42"/>

                            <!-- ADJUSTMENTS Section -->
                            <TextBlock Text="Adjustments" FontSize="16" Foreground="#E0E0E0" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            
                            <CheckBox x:Name="InvertCheckBox" Content="Invert" 
                                      Style="{StaticResource ModernCheckBox}" Margin="0,0,0,8"/>

                            <Grid Margin="0,0,0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Contrast" FontSize="13" Foreground="#999999"/>
                                <TextBlock Grid.Column="1" Text="{Binding ElementName=ContrastSlider, Path=Value, StringFormat={}{0:F0}}" 
                                           FontSize="13" Foreground="#999999"/>
                            </Grid>
                            <Slider x:Name="ContrastSlider" Minimum="0" Maximum="100" Value="45" 
                                    Style="{StaticResource ModernSlider}" Margin="0,0,0,8"/>

                            <Grid Margin="0,0,0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Midtones" FontSize="13" Foreground="#999999"/>
                                <TextBlock Grid.Column="1" Text="{Binding ElementName=MidtonesSlider, Path=Value, StringFormat={}{0:F0}}" 
                                           FontSize="13" Foreground="#999999"/>
                            </Grid>
                            <Slider x:Name="MidtonesSlider" Minimum="0" Maximum="100" Value="50" 
                                    Style="{StaticResource ModernSlider}" Margin="0,0,0,8"/>

                            <Grid Margin="0,0,0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Highlights" FontSize="13" Foreground="#999999"/>
                                <TextBlock Grid.Column="1" Text="{Binding ElementName=HighlightsSlider, Path=Value, StringFormat={}{0:F0}}" 
                                           FontSize="13" Foreground="#999999"/>
                            </Grid>
                            <Slider x:Name="HighlightsSlider" Minimum="0" Maximum="100" Value="50" 
                                    Style="{StaticResource ModernSlider}" Margin="0,0,0,8"/>

                            <Grid Margin="0,0,0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Luminance Threshold" FontSize="13" Foreground="#999999"/>
                                <TextBlock Grid.Column="1" Text="{Binding ElementName=LuminanceSlider, Path=Value, StringFormat={}{0:F0}}" 
                                           FontSize="13" Foreground="#999999"/>
                            </Grid>
                            <Slider x:Name="LuminanceSlider" Minimum="0" Maximum="100" Value="50" 
                                    Style="{StaticResource ModernSlider}" Margin="0,0,0,12"/>

                            <Separator Margin="0,0,0,12" Background="#3E3E42"/>

                            <!-- EFFECTS Section -->
                            <TextBlock Text="Effects" FontSize="16" Foreground="#E0E0E0" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            
                            <Grid Margin="0,0,0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Blur" FontSize="13" Foreground="#999999"/>
                                <TextBlock Grid.Column="1" Text="{Binding ElementName=BlurSlider, Path=Value, StringFormat={}{0:F0}}" 
                                           FontSize="13" Foreground="#999999"/>
                            </Grid>
                            <Slider x:Name="BlurSlider" Minimum="0" Maximum="20" Value="0" 
                                    Style="{StaticResource ModernSlider}" Margin="0,0,0,8"/>

                            <Grid Margin="0,0,0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Depth" FontSize="13" Foreground="#999999"/>
                                <TextBlock Grid.Column="1" Text="{Binding ElementName=DepthSlider, Path=Value, StringFormat={}{0:F0}}" 
                                           FontSize="13" Foreground="#999999"/>
                            </Grid>
                            <Slider x:Name="DepthSlider" Minimum="1" Maximum="10" Value="6" 
                                    Style="{StaticResource ModernSlider}" Margin="0,0,0,12"/>

                            <Separator Margin="0,0,0,12" Background="#3E3E42"/>

                            <!-- PRESETS Section -->
                            <TextBlock Text="Presets" FontSize="16" Foreground="#E0E0E0" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            
                            <Button Content="Save Preset" Click="SavePreset_Click" 
                                    Style="{StaticResource ModernButton}" Margin="0,0,0,8" Padding="0,10" FontSize="14"/>
                            <Button Content="Reset All" Click="ResetAll_Click" 
                                    Style="{StaticResource ModernButton}" Margin="0,0,0,12" Padding="0,10" FontSize="14"/>

                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </Grid>

            <!-- Status Bar -->
            <Border Grid.Row="2" Background="#252526" BorderBrush="#3E3E42" BorderThickness="0,1,0,0" CornerRadius="0,0,8,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" x:Name="StatusText" Text="Ready" 
                               FontSize="13" Foreground="#999999" VerticalAlignment="Center" Margin="12,0,0,0"/>
                    <TextBlock Grid.Column="1" Text="ShadeWorks v1.0" 
                               FontSize="13" Foreground="#666666" VerticalAlignment="Center" Margin="0,0,12,0"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>