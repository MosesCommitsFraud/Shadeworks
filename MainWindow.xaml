<Window x:Class="Shadeworks.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Shadeworks" Height="800" Width="1400"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResize"
        Icon="Assets/logo-white.png">
    
    <Border Background="#1E1E1E" CornerRadius="12" BorderBrush="#2D2D30" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <Border Grid.Row="0" Background="#2D2D30" CornerRadius="12,12,0,0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Menu Bar -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="12,0,0,0" VerticalAlignment="Center">
                        <Button Content="Open" Click="OpenImage_Click" Style="{StaticResource ModernButton}" Margin="0,0,8,0"/>
                        <Button Content="Export" Click="ExportImage_Click" Style="{StaticResource ModernButton}"/>
                    </StackPanel>

                    <TextBlock Grid.Column="1" Text="Shadeworks" FontSize="14" Foreground="#E0E0E0" 
                               HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Medium"/>

                    <!-- Window Controls -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="0,0,0,0" VerticalAlignment="Center">
                        <Button Content="─" Click="MinimizeButton_Click" Style="{StaticResource ModernButton}" 
                                Width="46" Height="40" FontSize="14" Padding="0" Margin="0"/>
                        <Button Content="□" Click="MaximizeButton_Click" Style="{StaticResource ModernButton}" 
                                Width="46" Height="40" FontSize="14" Padding="0" Margin="0"/>
                        <Button Content="✕" Click="CloseButton_Click" Style="{StaticResource ModernButton}" 
                                Width="46" Height="40" FontSize="14" Padding="0" Margin="0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content -->
            <Grid Grid.Row="1" Margin="12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="280"/>
                </Grid.ColumnDefinitions>

                <!-- Right Sidebar -->
                <Border Grid.Column="1" Background="#252526" CornerRadius="8" Margin="12,0,0,0" Padding="16">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <TextBlock Text="Dither Algorithm" FontSize="14" Foreground="#E0E0E0" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <ComboBox x:Name="DitherAlgorithmComboBox" SelectionChanged="DitherAlgorithm_Changed" Style="{StaticResource ModernComboBox}">
                                <ComboBoxItem Content="None" IsSelected="True"/>
                                <ComboBoxItem Content="Floyd-Steinberg"/>
                                <ComboBoxItem Content="Atkinson"/>
                                <ComboBoxItem Content="Bayer 2x2"/>
                                <ComboBoxItem Content="Bayer 4x4"/>
                                <ComboBoxItem Content="Bayer 8x8"/>
                                <ComboBoxItem Content="Stucki"/>
                                <ComboBoxItem Content="Jarvis-Judice-Ninke"/>
                                <ComboBoxItem Content="Sierra"/>
                                <ComboBoxItem Content="Sierra Lite"/>
                                <ComboBoxItem Content="Burkes"/>
                            </ComboBox>

                            <Separator Margin="0,20,0,20" Background="#3E3E42"/>

                            <TextBlock Text="Color Reduction" FontSize="14" Foreground="#E0E0E0" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <TextBlock Text="Colors:" FontSize="12" Foreground="#CCCCCC" Margin="0,0,0,4"/>
                            <StackPanel Orientation="Horizontal">
                                <Slider x:Name="ColorCountSlider" Minimum="2" Maximum="256" Value="2" Width="180" 
                                        ValueChanged="ImageParameter_Changed" Style="{StaticResource ModernSlider}"/>
                                <TextBlock Text="{Binding ElementName=ColorCountSlider, Path=Value, StringFormat={}{0:F0}}" 
                                           FontSize="12" Foreground="#E0E0E0" VerticalAlignment="Center" Margin="8,0,0,0" Width="30"/>
                            </StackPanel>

                            <Separator Margin="0,20,0,20" Background="#3E3E42"/>

                            <TextBlock Text="Adjustments" FontSize="14" Foreground="#E0E0E0" FontWeight="SemiBold" Margin="0,0,0,12"/>
                            
                            <TextBlock Text="Brightness:" FontSize="12" Foreground="#CCCCCC" Margin="0,0,0,4"/>
                            <StackPanel Orientation="Horizontal">
                                <Slider x:Name="BrightnessSlider" Minimum="-100" Maximum="100" Value="0" Width="180" 
                                        ValueChanged="ImageParameter_Changed" Style="{StaticResource ModernSlider}"/>
                                <TextBlock Text="{Binding ElementName=BrightnessSlider, Path=Value, StringFormat={}{0:F0}}" 
                                           FontSize="12" Foreground="#E0E0E0" VerticalAlignment="Center" Margin="8,0,0,0" Width="30"/>
                            </StackPanel>

                            <TextBlock Text="Contrast:" FontSize="12" Foreground="#CCCCCC" Margin="0,12,0,4"/>
                            <StackPanel Orientation="Horizontal">
                                <Slider x:Name="ContrastSlider" Minimum="-100" Maximum="100" Value="0" Width="180" 
                                        ValueChanged="ImageParameter_Changed" Style="{StaticResource ModernSlider}"/>
                                <TextBlock Text="{Binding ElementName=ContrastSlider, Path=Value, StringFormat={}{0:F0}}" 
                                           FontSize="12" Foreground="#E0E0E0" VerticalAlignment="Center" Margin="8,0,0,0" Width="30"/>
                            </StackPanel>

                            <TextBlock Text="Saturation:" FontSize="12" Foreground="#CCCCCC" Margin="0,12,0,4"/>
                            <StackPanel Orientation="Horizontal">
                                <Slider x:Name="SaturationSlider" Minimum="-100" Maximum="100" Value="0" Width="180" 
                                        ValueChanged="ImageParameter_Changed" Style="{StaticResource ModernSlider}"/>
                                <TextBlock Text="{Binding ElementName=SaturationSlider, Path=Value, StringFormat={}{0:F0}}" 
                                           FontSize="12" Foreground="#E0E0E0" VerticalAlignment="Center" Margin="8,0,0,0" Width="30"/>
                            </StackPanel>

                            <Separator Margin="0,20,0,20" Background="#3E3E42"/>

                            <TextBlock Text="Effects" FontSize="14" Foreground="#E0E0E0" FontWeight="SemiBold" Margin="0,0,0,12"/>
                            
                            <CheckBox x:Name="GrayscaleCheckBox" Content="Grayscale" Checked="ImageParameter_Changed" 
                                      Unchecked="ImageParameter_Changed" Style="{StaticResource ModernCheckBox}"/>
                            
                            <CheckBox x:Name="InvertCheckBox" Content="Invert" Margin="0,8,0,0" Checked="ImageParameter_Changed" 
                                      Unchecked="ImageParameter_Changed" Style="{StaticResource ModernCheckBox}"/>

                            <Separator Margin="0,20,0,20" Background="#3E3E42"/>

                            <Button Content="Reset All" Click="ResetAll_Click" Style="{StaticResource ModernButton}" 
                                    HorizontalAlignment="Stretch" Padding="0,8"/>
                        </StackPanel>
                    </ScrollViewer>
                </Border>

                <!-- Image Preview Area -->
                <Border Grid.Column="0" Background="#2D2D30" CornerRadius="8" Margin="0,0,12,0">
                    <Grid>
                        <!-- Placeholder when no image is loaded -->
                        <TextBlock x:Name="PlaceholderText" Text="Open an image to get started" 
                                   FontSize="16" Foreground="#666666" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        
                        <!-- Image Display -->
                        <ScrollViewer x:Name="ImageScrollViewer" 
                                      HorizontalScrollBarVisibility="Auto" 
                                      VerticalScrollBarVisibility="Auto"
                                      PreviewMouseWheel="ImageScrollViewer_MouseWheel"
                                      PreviewMouseDown="ImageScrollViewer_MouseDown"
                                      PreviewMouseMove="ImageScrollViewer_MouseMove"
                                      PreviewMouseUp="ImageScrollViewer_MouseUp"
                                      CanContentScroll="True">
                            <Border x:Name="ImageBorder" Background="Transparent" Margin="20">
                                <Image x:Name="ImagePreview" 
                                       RenderTransformOrigin="0.5,0.5"
                                       Stretch="Uniform">
                                    <Image.RenderTransform>
                                        <ScaleTransform x:Name="ImageScaleTransform" ScaleX="1" ScaleY="1"/>
                                    </Image.RenderTransform>
                                </Image>
                            </Border>
                        </ScrollViewer>

                        <!-- Zoom Indicator -->
                        <Border x:Name="ZoomIndicator" Background="#CC2D2D30" Padding="8,4" CornerRadius="4"
                                HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,12,12"
                                Visibility="Collapsed">
                            <TextBlock x:Name="ZoomText" Text="100%" FontSize="12" Foreground="#E0E0E0"/>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>

