<Window x:Class="Shadeworks.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ShadeWorks" Height="800" Width="1400"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResize"
        Icon="Assets/logo-white.png"
        AllowDrop="True"
        Drop="Window_Drop"
        DragEnter="Window_DragEnter"
        DragLeave="Window_DragLeave">
    
    <Border Background="#1E1E1E" CornerRadius="8" BorderBrush="#2D2D30" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="32"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="24"/>
            </Grid.RowDefinitions>

            <!-- Combined Title Bar and Menu -->
            <Border Grid.Row="0" Background="#252526" CornerRadius="8,8,0,0" BorderBrush="#3E3E42" BorderThickness="0,0,0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Draggable area behind everything -->
                    <Border Grid.Column="0" Grid.ColumnSpan="3" Background="Transparent" 
                            MouseLeftButtonDown="TitleBar_MouseLeftButtonDown"/>

                    <!-- Menu Bar -->
                    <Menu Grid.Column="0" Background="Transparent" VerticalAlignment="Center">
                        <MenuItem Header="File" Style="{StaticResource ModernMenuItem}">
                            <MenuItem Header="Open..." Click="OpenImage_Click"/>
                            <MenuItem Header="Export..." Click="ExportImage_Click"/>
                            <Separator/>
                            <MenuItem Header="Exit" Click="CloseButton_Click"/>
                        </MenuItem>
                        <MenuItem Header="Edit" Style="{StaticResource ModernMenuItem}">
                            <MenuItem Header="Reset All" Click="ResetAll_Click"/>
                        </MenuItem>
                        <MenuItem Header="Batch" Style="{StaticResource ModernMenuItem}"/>
                        <MenuItem Header="Adjustments" Style="{StaticResource ModernMenuItem}"/>
                        <MenuItem Header="Themes" Style="{StaticResource ModernMenuItem}"/>
                        <MenuItem Header="Extras" Style="{StaticResource ModernMenuItem}"/>
                        <MenuItem Header="Help" Style="{StaticResource ModernMenuItem}"/>
                    </Menu>

                    <!-- Window Controls -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Stretch">
                        <Button Click="MinimizeButton_Click" Style="{StaticResource WindowButton}" Width="46" Height="32">
                            <TextBlock Text="─" FontSize="10" Foreground="#CCCCCC" VerticalAlignment="Center"/>
                        </Button>
                        <Button Click="MaximizeButton_Click" Style="{StaticResource WindowButton}" Width="46" Height="32">
                            <TextBlock Text="□" FontSize="10" Foreground="#CCCCCC" VerticalAlignment="Center"/>
                        </Button>
                        <Button Click="CloseButton_Click" Style="{StaticResource WindowButtonClose}" Width="46" Height="32">
                            <TextBlock Text="✕" FontSize="10" Foreground="#CCCCCC" VerticalAlignment="Center"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="380"/>
                </Grid.ColumnDefinitions>

                <!-- Left Canvas Area -->
                <Border Grid.Column="0" Background="#252526" Margin="0,0,0,0"
                        AllowDrop="True"
                        Drop="Canvas_Drop"
                        DragEnter="Canvas_DragEnter"
                        DragLeave="Canvas_DragLeave">
                    <Grid>
                        <!-- Drag & Drop Placeholder -->
                        <StackPanel x:Name="DropPlaceholder" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Border Background="#3E3E42" CornerRadius="8" Padding="24" HorizontalAlignment="Center">
                                <StackPanel>
                                    <TextBlock Text="🖼️" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,12"/>
                                    <TextBlock Text="Drop image here or click to browse" 
                                               FontSize="16" Foreground="#999999" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Supported: PNG, JPG, BMP, GIF" 
                                               FontSize="12" Foreground="#666666" HorizontalAlignment="Center" Margin="0,8,0,0"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                        
                        <!-- Image Display -->
                        <ScrollViewer x:Name="ImageScrollViewer" 
                                      HorizontalScrollBarVisibility="Auto" 
                                      VerticalScrollBarVisibility="Auto"
                                      PreviewMouseWheel="ImageScrollViewer_MouseWheel"
                                      PreviewMouseDown="ImageScrollViewer_MouseDown"
                                      PreviewMouseMove="ImageScrollViewer_MouseMove"
                                      PreviewMouseUp="ImageScrollViewer_MouseUp"
                                      CanContentScroll="True"
                                      Visibility="Collapsed">
                            <Border x:Name="ImageBorder" Background="Transparent" Margin="20">
                                <Image x:Name="ImagePreview" 
                                       RenderTransformOrigin="0.5,0.5"
                                       Stretch="Uniform">
                                    <Image.RenderTransform>
                                        <ScaleTransform x:Name="ImageScaleTransform" ScaleX="1" ScaleY="1"/>
                                    </Image.RenderTransform>
                                </Image>
                            </Border>
                        </ScrollViewer>
                    </Grid>
                </Border>

                <!-- Right Sidebar -->
                <Border Grid.Column="1" Background="#2D2D30" BorderBrush="#3E3E42" BorderThickness="1,0,0,0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="16">
                            <!-- Import/Export Buttons -->
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Button Grid.Column="0" Content="Import" Click="OpenImage_Click" 
                                        Style="{StaticResource ModernButton}" Margin="0,0,6,0" Padding="0,8"/>
                                <Button Grid.Column="1" Content="Export" Click="ExportImage_Click" 
                                        Style="{StaticResource ModernButton}" Margin="6,0,0,0" Padding="0,8"/>
                            </Grid>

                            <!-- Zoom Controls -->
                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Button Grid.Column="0" Content="Zoom In" Click="ZoomIn_Click" 
                                        Style="{StaticResource ModernButton}" Margin="0,0,4,0" Padding="0,8" FontSize="11"/>
                                <Button Grid.Column="1" Content="Zoom Out" Click="ZoomOut_Click" 
                                        Style="{StaticResource ModernButton}" Margin="4,0,4,0" Padding="0,8" FontSize="11"/>
                                <Button Grid.Column="2" Content="Reset Zoom" Click="ResetZoom_Click" 
                                        Style="{StaticResource ModernButton}" Margin="4,0,0,0" Padding="0,8" FontSize="11"/>
                            </Grid>

                            <!-- Preview Panel -->
                            <Border Background="#1E1E1E" CornerRadius="4" Padding="8" Margin="0,0,0,16" Height="180">
                                <Grid>
                                    <TextBlock Text="Ctrl+Shift+H for help" 
                                               FontSize="11" Foreground="#666666" 
                                               HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,8,0,0"/>
                                    <TextBlock Text="Preview" 
                                               FontSize="13" Foreground="#555555" 
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    <Image x:Name="PreviewImage" Stretch="Uniform" Margin="8"/>
                                </Grid>
                            </Border>

                            <Separator Margin="0,0,0,16" Background="#3E3E42"/>

                            <!-- Style -->
                            <TextBlock Text="Style" FontSize="13" Foreground="#CCCCCC" Margin="0,0,0,8"/>
                            <ComboBox x:Name="StyleComboBox" SelectionChanged="Style_Changed" 
                                      Style="{StaticResource ModernComboBox}" Margin="0,0,0,16">
                                <ComboBoxItem Content="Uniform Modulation Y" IsSelected="True"/>
                                <ComboBoxItem Content="Floyd-Steinberg"/>
                                <ComboBoxItem Content="Atkinson"/>
                                <ComboBoxItem Content="Bayer 2x2"/>
                                <ComboBoxItem Content="Bayer 4x4"/>
                                <ComboBoxItem Content="Bayer 8x8"/>
                            </ComboBox>

                            <!-- Presets -->
                            <TextBlock Text="Presets" FontSize="13" Foreground="#CCCCCC" Margin="0,0,0,8"/>
                            <ComboBox x:Name="PresetsComboBox" SelectionChanged="Presets_Changed" 
                                      Style="{StaticResource ModernComboBox}" Margin="0,0,0,16">
                                <ComboBoxItem Content="None" IsSelected="True"/>
                                <ComboBoxItem Content="High Contrast"/>
                                <ComboBoxItem Content="Vintage"/>
                                <ComboBoxItem Content="Monochrome"/>
                            </ComboBox>

                            <Separator Margin="0,0,0,16" Background="#3E3E42"/>

                            <!-- Scale -->
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Scale" FontSize="13" Foreground="#CCCCCC" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1" Text="{Binding ElementName=ScaleSlider, Path=Value, StringFormat={}{0:F0}}" 
                                           FontSize="13" Foreground="#999999" VerticalAlignment="Center"/>
                            </Grid>
                            <Slider x:Name="ScaleSlider" Minimum="1" Maximum="20" Value="11" 
                                    Style="{StaticResource ModernSlider}" Margin="0,0,0,16"/>

                            <!-- Line Scale -->
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Line Scale" FontSize="13" Foreground="#CCCCCC" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1" Text="{Binding ElementName=LineScaleSlider, Path=Value, StringFormat={}{0:F0}}" 
                                           FontSize="13" Foreground="#999999" VerticalAlignment="Center"/>
                            </Grid>
                            <Slider x:Name="LineScaleSlider" Minimum="1" Maximum="10" Value="1" 
                                    Style="{StaticResource ModernSlider}" Margin="0,0,0,16"/>

                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </Grid>

            <!-- Status Bar -->
            <Border Grid.Row="2" Background="#252526" BorderBrush="#3E3E42" BorderThickness="0,1,0,0" CornerRadius="0,0,8,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" x:Name="StatusText" Text="Ready" 
                               FontSize="11" Foreground="#999999" VerticalAlignment="Center" Margin="12,0,0,0"/>
                    <TextBlock Grid.Column="1" Text="ShadeWorks v1.0" 
                               FontSize="11" Foreground="#666666" VerticalAlignment="Center" Margin="0,0,12,0"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>